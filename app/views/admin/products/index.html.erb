<h1>Listing products</h1>

<table class="table table-striped table-hover">
  <tr>
    <th>SKU</th>
    <th>Image</th>
    <th>Name</th>
    <th>Price</th>
    <th></th>
    <th></th>
  </tr>
<% @variants.each do |variant| %>
  <tr>
    <td><%= variant.sku %></td>
    <td><%= image_tag variant.images.first.image_url(:icon).to_s unless variant.images.empty? %>
    <td><%= link_to variant.product.name, edit_admin_product_path(variant) %></td>
    <td><%= variant.price %></td>
    <td><%= link_to '', edit_admin_product_path(variant), :class=>'glyphicon glyphicon-edit' %></td>
    <td><%= link_to '', admin_product_path(variant), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'glyphicon glyphicon-remove' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_admin_product_path %>
