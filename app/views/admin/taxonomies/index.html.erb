<h1><%= t(:taxonomies) %></h1>

<table class='table table-striped table-hover table-condensed'>
  <tr>
    <th><%= t(:name) %></th>
  </tr>

<% @taxonomies.each do |taxonomy| %>
  <tr>
    <td><%= taxonomy.name %></td>
    <td><%= link_to 'Show', admin_taxonomies_path(taxonomy) %></td>
    <td><%= link_to 'Edit', edit_admin_taxonomy_path(taxonomy) %></td>
    <td><%= link_to 'Destroy', admin_taxonomy_path(taxonomy), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
