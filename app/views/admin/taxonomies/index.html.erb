<h1><%= t(:taxonomies) %></h1>

<div class="row">
  <div class="col-lg-5">
    <table class='table table-striped table-hover table-condensed'>
      <tr>
        <th><%= t(:name) %></th>
        <th></th>
      </tr>

    <% @taxonomies.each do |taxonomy| %>
      <tr>
        <td><%= link_to taxonomy.indented_name, edit_admin_taxonomy_path(taxonomy) %></td>
        <td class='actions'>
          <%= link_to '', edit_admin_taxonomy_path(taxonomy),
                :class=>'glyphicon glyphicon-edit btn btn-link' %>&nbsp;
          <%= link_to '', admin_taxonomy_path(taxonomy),
                method: :delete, data: { confirm: t(:are_sure) },
                class: 'glyphicon glyphicon-trash btn btn-link' %>
        </td>
      </tr>
    <% end %>
    </table>
    <%= link_to new_admin_taxonomy_path, :class => 'btn btn-primary' do %>
      <span class='glyphicon glyphicon-plus'></span> <%= t(:add_taxonomy) %>
    <% end %>
  </end>
</end>
