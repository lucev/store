<h1><%= t(:taxonomies) %></h1>

<table class='table table-striped table-hover table-condensed'>
  <tr>
    <th><%= t(:name) %></th>
  </tr>

<% @taxonomies.each do |taxonomy| %>
  <tr>
    <td><%= link_to taxonomy.indented_name, edit_admin_taxonomy_path(taxonomy) %></td>
  </tr>
<% end %>
</table>

