<%= render 'shared/vertical_navbar' %>
<div class='row shifted-content'>
  <% @variants.each do |variant| %>
    <div class='col-xs-12 col-sm-6 col-md-4 col-lg-3'>
      <div class='thumbnail'>
        <%= link_to image_tag(variant.images.first.image_url(:thumb), class: 'img-responsive'),       product_path(variant) %>
        <div class='caption'>
          <h4><%= link_to variant.product.name, product_path(variant) %></h4>
          <strong><%= number_to_currency(variant.price, locale: I18n.locale) %></strong>
          <p><%= variant.product.description %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>