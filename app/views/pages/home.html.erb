<div class='row'>
  <div class='col-lg-2'>
    <%= form_tag products_path, :method => :get do %>
      <% @taxonomies.each do |taxonomy| %>
        <%= check_box_tag 'taxonomies[]', taxonomy.id unless taxonomy.parent.nil? %>&nbsp;
        <%= link_to taxonomy.indented_name, products_path %>
        <hr/>
      <% end %>
      <%= submit_tag "Search", class: 'btn btn-default' %>
    <% end %>
  </div>
  <%= @root_taxonomies.count %>
  <% @variants.each do |variant| %>
    <div class='col-xs-12 col-sm-6 col-md-4 col-lg-2'>
      <%= link_to image_tag(variant.images.first.image_url(:thumb), class: 'img-thumbnail img-responsive'),       product_path(variant) %><br/>
      <%= link_to variant.product.name, product_path(variant) %><br/>
      <%= variant.price %>
    </div>
  <% end %>
</div>